
<div class="card">
  <div class="card-header">
    <a class ="titleHome" href="/post/{{id}}">{{title}} </a>
  </div>
  <div class="card-body">

    <h5 class="card-title">{{text}}</h5>
    <p class="card-text"><b>{{user.username}}</b>
      |
      {{format_date created_at}}
      |
      <a href="/post/{{id}}">{{comments.length}}
        {{format_plural "comment" comments.length}}</a></p>
  </div>
</div>
