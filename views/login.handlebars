</head>

<div class="row">
  <div class="col-md-6 mt-4 p-5">
    <form class="login-form">
      <h2 class="h2-login">Login</h2>
      <label for="email">Email</label>
      <input type="text" name="email" id="email-login" required />
      <label for="password">Password</label>
      <input type="password" name="password" id="password-login" required />
      <button>Login</button>
    </form>
  </div>

  <div class="col-md-3 mt-4 p-5">
    <form class="signup-form">
      <h2 class="h2-signUp">Sign Up</h2>
      <label for="email">Email</label>
      <input type="text" name="email" id="email-signup" required />
      <label for="password">Password</label>
      <input type="password" id="password-signup" name="password" required />
      <label for="username">Username</label>
      <input type="text" name="username" id="name-signup" required />
      <div class="password error"></div>
      <button>Sign Up</button>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>